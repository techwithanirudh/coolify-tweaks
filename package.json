{
  "name": "coolify-tweaks",
  "version": "1.0.0",
  "description": "Tweaks for Coolify",
  "type": "module",
  "scripts": {
    "build": "sass src/main.scss dist/main.css --no-source-map --load-path=src && postcss dist/main.css --replace && bun scripts/build.ts",
    "dev": "sass --watch src:dist --no-source-map --load-path=src",
    "release": "bun run version:patch && bun run build"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "autoprefixer": "^10.4.21",
    "lefthook": "^1.11.14",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-preset-env": "^10.2.4",
    "prettier": "3.6.2",
    "sass": "^1.89.2",
    "@types/bun": "latest"
  },
  "private": true,
  "peerDependencies": {
    "typescript": "^5"
  }
}
