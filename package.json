{
  "name": "coolify-tweaks",
  "description": "A userstyle that enhances Coolify's UI by applying opinionated tweaks, spacing, colors, and layout fixes, to make the dashboard more polished and user-friendly.",
  "version": "3.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "sass --no-source-map --load-path=src --watch src:dist",
    "build": "bun run build:sass && bun run build:css && bun run scripts/build.ts && bun run format",
    "build:sass": "sass --no-source-map --load-path=src src:dist",
    "build:css": "postcss dist/main.css --replace",
    "format": "prettier --write --ignore-unknown --log-level silent .",
    "release": "bun run scripts/bump.ts"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "autoprefixer": "^10.4.21",
    "lefthook": "^1.11.14",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-preset-env": "^10.2.4",
    "prettier": "3.6.2",
    "sass": "^1.89.2",
    "@types/bun": "latest"
  },
  "dependencies": {
    "@types/semver": "^7.7.0",
    "semver": "^7.7.2"
  }
}
