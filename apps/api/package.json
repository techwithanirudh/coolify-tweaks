{
  "name": "@repo/api",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm with-env nitro build",
    "clean": "git clean -xdf .cache .next .nitro .turbo node_modules",
    "dev": "pnpm with-env nitro dev --port 3001",
    "prepare": "nitro prepare",
    "preview": "node .output/server/index.mjs",
    "lint": "pnpm run prepare && eslint --flag unstable_native_nodejs_ts_config",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "typecheck": "pnpm run prepare && tsc --noEmit --skipLibCheck",
    "check:spelling": "cspell -c .cspell.json --no-progress --no-summary --no-must-find-files --cache --cache-location .cache/.cspellcache --unique .",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "browserslist": "^4.27.0",
    "h3": "^1.15.3",
    "lightningcss": "^1.30.2",
    "mime": "^4.0.7",
    "ofetch": "^1.4.1",
    "postcss": "^8.5.6",
    "shadcn": "^2.9.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@repo/cspell-config": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "cspell": "catalog:",
    "eslint": "catalog:",
    "nitropack": "latest",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@repo/prettier-config"
}
