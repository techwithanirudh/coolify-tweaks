{
  "name": "@repo/style",
  "private": true,
  "type": "module",
  "main": "src/main.scss",
  "scripts": {
    "build": "pnpm with-env tsx scripts/build.ts",
    "build:watch": "pnpm with-env tsx scripts/watch.ts",
    "clean": "git clean -xdf .cache .next .turbo node_modules",
    "preview": "serve dist --listen 3000 --single --no-request-logging --no-clipboard",
    "dev": "concurrently --kill-others --names watch,serve -r \"pnpm run build:watch\" \"pnpm run preview\"",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint --flag unstable_native_nodejs_ts_config",
    "typecheck": "tsc --noEmit",
    "check:spelling": "cspell -c .cspell.json --no-progress --no-summary --no-must-find-files --cache --cache-location .cache/.cspellcache --unique .",
    "with-env": "dotenv -e ../../.env --"
  },
  "peerDependencies": {
    "typescript": "catalog:"
  },
  "dependencies": {
    "sass-embedded": "^1.93.2",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@repo/cspell-config": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@types/serve-handler": "^6.1.4",
    "browserslist": "^4.27.0",
    "commander": "^14.0.1",
    "concurrently": "^9.2.1",
    "cspell": "catalog:",
    "eslint": "catalog:",
    "lightningcss": "^1.30.2",
    "ora": "^9.0.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-load-config": "^6.0.1",
    "postcss-preset-env": "^10.4.0",
    "prettier": "catalog:",
    "serve": "^14.2.5",
    "serve-handler": "^6.1.6"
  },
  "prettier": "@repo/prettier-config"
}
