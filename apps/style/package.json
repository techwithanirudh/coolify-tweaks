{
  "name": "coolify-tweaks",
  "version": "3.8.7",
  "description": "Opinionated tweaks for Coolify: better spacing, layout, and color polish.",
  "author": {
    "name": "Anirudh Sriram",
    "email": "hello@techwithanirudh.com",
    "url": "https://github.com/techwithanirudh"
  },
  "private": true,
  "type": "module",
  "main": "src/main.scss",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/techwithanirudh/coolify-tweaks"
  },
  "homepage": "https://github.com/techwithanirudh/coolify-tweaks#readme",
  "scripts": {
    "build": "vite build",
    "build:watch": "chokidar 'src/**/*' -c 'vite build' --initial --silent",
    "dev": "vite dev",
    "preview": "serve dist --listen 3000 --single",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint --flag unstable_native_nodejs_ts_config",
    "typecheck": "tsc --noEmit",
    "check:spelling": "cspell -c .cspell.json --no-progress --no-summary --no-must-find-files --unique .",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "bun run build && changeset publish"
  },
  "peerDependencies": {
    "typescript": "catalog:"
  },
  "dependencies": {
    "@types/semver": "^7.7.1",
    "semver": "^7.7.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.5",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@repo/cspell-config": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@types/bun": "latest",
    "eslint": "catalog:",
    "@eslint/js": "catalog:",
    "typescript-eslint": "^8.46.0",
    "autoprefixer": "^10.4.21",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "conventional-changelog-atom": "^5.0.0",
    "lefthook": "^1.13.6",
    "playwright": "^1.55.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-preset-env": "^10.4.0",
    "prettier": "3.6.2",
    "sass": "^1.93.2",
    "serve": "^14.2.5",
    "turbo": "^2.5.8",
    "vite": "^7.1.9",
    "vite-plugin-banner": "^0.8.1"
  },
  "prettier": "@repo/prettier-config"
}
